@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.DrinkRecipe>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}



        <div class="grid-item">
            <div> 
                <h1>@Model.Value("quickViewTitle")</h1>
                
                    <div>
                        @{
                            var image = Model.Value<IPublishedContent>("quickViewImage");
                            }
                            <img src="@image.Url()" height="250px" width="250px"/>
                    </div>
                    <div>@Model.Value("drinkIngredientHeader")</div>
                    <div><p>@Model.Value("drinkRecipeIngredients")</p></div>
                    <div>@Model.Value("drinkDescriptionHeader")</div>
                    <div><p>@Model.Value("drinkRecipeDescription")</p></div>
            </div>
        </div>
